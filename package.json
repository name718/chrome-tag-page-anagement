{
  "name": "tabtamer-chrome-extension",
  "version": "1.0.0",
  "description": "智能标签页管理Chrome插件",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:extension": "vite build && npm run copy-manifest",
    "copy-manifest": "cp manifest.json dist/ && cp background.js dist/ && cp content.js dist/ && mkdir -p dist/icons && cp icons/* dist/icons/ && cp dist/src/popup.html dist/ && cp dist/src/options.html dist/"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "pinia": "^2.1.6",
    "@vueuse/core": "^10.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "vite": "^4.4.9",
    "typescript": "^5.1.6",
    "@types/chrome": "^0.0.242"
  },
  "keywords": [
    "chrome-extension",
    "vue",
    "tab-management",
    "productivity"
  ],
  "author": "TabTamer Team",
  "license": "MIT"
}
